{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Sid": "S3Access",
			"Effect": "Allow",
			"Action": [
				"s3:*"
			],
			"Resource": [
				"arn:aws:s3:::sst-*",
				"arn:aws:s3:::sst-*/*",
				"arn:aws:s3:::nodm-name-*",
				"arn:aws:s3:::nodm-name-*/*"
			]
		},
		{
			"Sid": "CloudFrontAccess",
			"Effect": "Allow",
			"Action": [
				"cloudfront:*",
				"cloudfront-keyvaluestore:*"
			],
			"Resource": "*"
		},
		{
			"Sid": "LambdaAccess",
			"Effect": "Allow",
			"Action": [
				"lambda:*"
			],
			"Resource": "*"
		},
		{
			"Sid": "IAMAccess",
			"Effect": "Allow",
			"Action": [
				"iam:CreateRole",
				"iam:DeleteRole",
				"iam:GetRole",
				"iam:AttachRolePolicy",
				"iam:DetachRolePolicy",
				"iam:PutRolePolicy",
				"iam:DeleteRolePolicy",
				"iam:GetRolePolicy",
				"iam:ListRolePolicies",
				"iam:ListAttachedRolePolicies",
				"iam:CreatePolicy",
				"iam:DeletePolicy",
				"iam:GetPolicy",
				"iam:GetPolicyVersion",
				"iam:ListPolicyVersions",
				"iam:TagRole",
				"iam:UntagRole",
				"iam:TagPolicy",
				"iam:UntagPolicy"
			],
			"Resource": "*"
		},
		{
			"Sid": "IAMPassRole",
			"Effect": "Allow",
			"Action": "iam:PassRole",
			"Resource": "*",
			"Condition": {
				"StringEquals": {
					"iam:PassedToService": [
						"lambda.amazonaws.com",
						"cloudformation.amazonaws.com",
						"cloudfront.amazonaws.com"
					]
				}
			}
		},
		{
			"Sid": "CloudWatchLogsAccess",
			"Effect": "Allow",
			"Action": [
				"logs:*"
			],
			"Resource": "*"
		},
		{
			"Sid": "SSMAccess",
			"Effect": "Allow",
			"Action": [
				"ssm:*"
			],
			"Resource": "*"
		},
		{
			"Sid": "Route53Access",
			"Effect": "Allow",
			"Action": [
				"route53:*"
			],
			"Resource": "*"
		},
		{
			"Sid": "ACMAccess",
			"Effect": "Allow",
			"Action": [
				"acm:*"
			],
			"Resource": "*"
		},
		{
			"Sid": "CloudFormationAccess",
			"Effect": "Allow",
			"Action": [
				"cloudformation:*"
			],
			"Resource": "*"
		},
		{
			"Sid": "ECRAccess",
			"Effect": "Allow",
			"Action": [
				"ecr:*"
			],
			"Resource": "*"
		},
		{
			"Sid": "DynamoDBAccess",
			"Effect": "Allow",
			"Action": [
				"dynamodb:*"
			],
			"Resource": "*"
		},
		{
			"Sid": "SQSAccess",
			"Effect": "Allow",
			"Action": [
				"sqs:*"
			],
			"Resource": "*"
		}
	]
}
